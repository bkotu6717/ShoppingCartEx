<table class="table">
	<tbody>
		<% for item in @order_items %>
			<tr>
				<div class="well">
					<div class="row">
						<div class="col-md-4"> <%= item.product.name %></div>
						<div class="col-md-8">
							<%= form_for item, html: {class: 'form-inline'} do |form| %>
								<div class="form-group">
									<%= form.label :quantity %>
									<%= form.number_field :quantity %>
								</div>
								<div class="form-group">
									 <%= form.submit "Update quantity", class: "btn btn-primary" %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
				</tr>
			<% end %>
	</tbody>
</table>