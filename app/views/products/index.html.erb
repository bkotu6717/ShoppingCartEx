<div class="container">

	<h1 align="center" class='lead'>
		Listing all the available items in the store.
	</h1>

	<div class="row">
		<div class="col-lg-10">

		</div>
	</div>

	<table class='table table-striped table-bordered table-condensed'>
		<thead>
			<th> Name </th>
			<th> Price </th>
			<th>&nbsp;</th>
		</thead>
		<tbody>
			<% for product in @products %>
				<tr>
					<td><%= product.name %></td> <td> <%= product.price %></td><td><%= link_to 'Add To Cart', '#', class: 'btn btn-primary' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

