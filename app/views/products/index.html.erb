<p class="lead">
	Listing all the Products
</p>

<table class="table table-bordered table-hover">
	<thead>
		<th> ID </th> <td> Name </td> <td>Unit Price</td>
	</thead>
	<tbody>
		<% for product in @products %>
		<tr>
			<td><%= product.id %></td><td><%= product.name %></td><td><%= product.price %></td>
		</tr>
		<% end %>
	</tbody>
</table>